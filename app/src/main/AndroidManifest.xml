<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ivan.asteroides">
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_icono_asteroide"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.AppCompat.CompactMenu">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".AcercaDeActivity"
            android:label="@string/acerca_de"
            android:theme="@android:style/Theme.Dialog"/>

        <activity android:name=".Preferencias"
            android:label="PREFERENCIAS"/>

        <activity android:name=".Puntuaciones"
            android:label="PUNTUACIONES"
            android:theme="@style/Theme.AppCompat"/>

        <activity android:name=".Juego"
            android:label="JUEGO"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:hardwareAccelerated="false"/>

    </application>

</manifest>